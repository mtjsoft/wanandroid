/* pages/chapterslist/chapterslist.wxss */

.liststyle {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 10px;
  border-bottom: 3px solid #f5f5f5;
  font-size: 16px;
}

.listtop {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.listtopimage {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 5px;
}

.listtoptime {
  position: absolute;
  right: 10px;
  text-align: right;
  color: #9f9f9f;
  font-size: 14px;
}

.title {
  font-size: 16px;
  margin-top: 5px;
  margin-bottom: 5px;
}

.chapterName {
  font-size: 12px;
  color: #1b82d1;
  margin-top: 5px;
}

.collect {
  width: 20px;
  height: 20px;
  position: absolute;
  right: 0px;
  padding: 10px;
}

/*搜索*/

.toprow {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  padding: 3%;
}

.input {
  height: 30px;
  line-height: 30px;
  border-bottom-left-radius: 50px;
  border-top-left-radius: 50px;
  width: 69%;
  background-color: #fff;
  font-size: 16px;
  padding: 8px;
}

.key {
  height: 30px;
  line-height: 30px;
  text-align: center;
  background-color: #1b82d1;
  color: #fff;
  font-size: 16px;
  width: 25%;
  border-bottom-right-radius: 50px;
  border-top-right-radius: 50px;
  padding: 8px;
}
