/* pages/me/me.wxss */
.UCenter-bg {
  background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.view{
  width: 100%;
  background-color: #1B82D1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.headimage{
  width: 80px;
  height: 80px;
  margin-top: 10%;
  border-radius: 50%;
  margin-bottom: 10px;
}

.text_f_w_16 {
  font-size: 16px;
  color: #000;
  background-color: #f5f5f5;
  padding: 10px;
}

.usercenter{
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #f5f5f5;
  margin-bottom: 1px;
}

.right{
  width: 24px;
  height: 24px;
  position: absolute;
  right: 10px;
}