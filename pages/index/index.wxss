/**index.wxss**/
.tower-swiper .tower-item {
		transform: scale(calc(0.5 + var(--index) / 10));
		margin-left: calc(var(--left) * 100rpx - 150rpx);
		z-index: var(--index);
	}

swiper {
  width: 100%;
  height: 300rpx;
}

.imageBener {
  width: 100%;
  height: 100%;
}

.liststyle{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 10px;
  font-size: 16px;
  border-bottom: 1px solid #f5f5f5;
}


.listtop {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-items: center;
}

.listtopimage{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 5px;
}

.listtoptime{
  position: absolute;
  width: auto;
  right: 10px;
  text-align: right;
  color: #9F9F9F;
  font-size: 14px;
}

.title{
  font-size: 16px;
  margin-top: 5px;
  margin-bottom: 5px;
}

.chapterName{
  font-size: 12px;
  color: #1B82D1;
  margin-top: 5px;
}

.collect{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 10px;
}