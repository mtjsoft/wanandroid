/* pages/search/search.wxss */

.liststyle{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 10px;
  border-bottom: 3px solid #f5f5f5;
  font-size: 16px;
}


.listtop {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.listtopimage{
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 5px;
}

.listtoptime{
  position: absolute;
  right: 10px;
  text-align: right;
  color: #9F9F9F;
  font-size: 14px;
}

.title{
  font-size: 16px;
  margin-top: 5px;
  margin-bottom: 5px;
}

.chapterName{
  font-size: 12px;
  color: #1B82D1;
  margin-top: 5px;
}

.collect{
  width: 20px;
  height: 20px;
  position: absolute;
  right: 0px;
  padding: 10px;
}